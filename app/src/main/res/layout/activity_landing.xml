<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <!-- ScrollView to make content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Logo and Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logo"
                    android:contentDescription="RentTaBai Logo" />

                <ImageView
                    android:id="@+id/account_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/profile_pic"
                    android:padding="8dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- Separator Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="20dp"/>

            <!-- Search View -->
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:queryHint="Search here..."
                android:iconifiedByDefault="false"
                android:background="@drawable/rounded_edittext" />

            <!-- Rental Car Image -->
            <ImageView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:src="@drawable/rentalcar"
                android:layout_marginTop="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Logout"
        android:layout_weight="1"/>
</LinearLayout>
            <RadioButton
                android:id="@+id/radio_pickup"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Pick - Up"
                android:textSize="18sp"
                android:textStyle="bold"
                android:buttonTint="@color/soft_orange"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Location Dropdown -->
                <Spinner
                    android:id="@+id/spinner_pickup_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <!-- Date Picker -->
                <TextView
                    android:id="@+id/text_pickup_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20 July 2022"
                    android:gravity="center"
                    android:padding="8dp"
                    />

                <!-- Time Picker -->
                <TextView
                    android:id="@+id/text_pickup_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="07:00"
                    android:gravity="center"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Drop-Off Section -->
            <RadioButton
                android:id="@+id/radio_dropoff"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Drop - Off"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Spinner
                    android:id="@+id/spinner_dropoff_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/text_dropoff_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="21 July 2022"
                    android:gravity="center"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/text_dropoff_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="01:00"
                    android:gravity="center"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Driver Selection -->
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <RadioButton
                    android:id="@+id/radio_with_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With Driver"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_without_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Without Driver"/>
            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
